{
  "name": "cuibonobo.com",
  "version": "1.0.0",
  "description": "The website at cuibonobo.com",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "npm run clean && svelte-kit build",
    "build:sitemap": "svelte-sitemap --domain https://cuibonobo.com",
    "build:404": "ncp ./build/404/index.html ./build/404.html && rimraf ./build/404",
    "clean": "rimraf ./build",
    "clean:all": "npm run clean && rimraf ./svelte-kit",
    "cli": "node --loader ts-node/esm --experimental-modules --es-module-specifier-resolution=node --no-warnings ./src/cli.ts",
    "postbuild": "npm run build:sitemap && npm run build:404",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "check:all": "npm run check && npm run format && npm run lint",
    "lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cuibonobo/cuibonobo.com.git"
  },
  "author": "Jen Garcia <jen@haverstack.com> (https://haverstack.com/)",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/cuibonobo/cuibonobo.com/issues"
  },
  "homepage": "https://github.com/cuibonobo/cuibonobo.com#readme",
  "devDependencies": {
    "@sveltejs/adapter-static": "^1.0.0-next.16",
    "@sveltejs/kit": "^1.0.0-next.147",
    "@tailwindcss/typography": "^0.4.1",
    "@types/glob": "^7.1.4",
    "@types/marked": "^2.0.4",
    "@types/prismjs": "^1.16.6",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "autoprefixer": "^10.3.1",
    "commander": "^8.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "gray-matter": "^4.0.3",
    "marked": "^2.1.3",
    "moment": "^2.29.1",
    "ncp": "^2.0.0",
    "node-glob": "^1.2.0",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "prismjs": "^1.24.1",
    "rimraf": "^3.0.2",
    "svelte": "^3.42.1",
    "svelte-check": "^2.2.4",
    "svelte-preprocess": "^4.7.4",
    "svelte-sitemap": "^1.5.0",
    "tailwindcss": "^2.2.7",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5",
    "xss": "^1.0.9"
  },
  "type": "module",
  "dependencies": {}
}
