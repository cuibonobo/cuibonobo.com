{
  "name": "cuibonobo.com",
  "version": "1.0.0",
  "description": "The website at cuibonobo.com",
  "scripts": {
    "dev": "svelte-kit dev --port 5000",
    "build": "npm run clean && svelte-kit build",
    "build:sitemap": "svelte-sitemap --domain https://cuibonobo.com",
    "build:404": "ncp ./build/404/index.html ./build/404.html && rimraf ./build/404",
    "clean": "npm run clean:vite-cache && npm run clean:build",
    "clean:all": "npm run clean && npm run clean:svelte-cache && npm run clean:vite-cache",
    "clean:build": "rimraf ./build",
    "clean:svelte-cache": "rimraf ./svelte-kit",
    "clean:vite-cache": "rimraf ./node_modules/.vite",
    "cli": "node --loader ts-node/esm --experimental-modules --es-module-specifier-resolution=node --no-warnings ./src/cli.ts",
    "postbuild": "npm run build:404 && npm run build:sitemap",
    "preview": "svelte-kit preview --port 5000",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "check:all": "npm run check && npm run format && npm run lint",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "test": "cross-env NODE_ENV=test jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cuibonobo/cuibonobo.com.git"
  },
  "author": "Jen Garcia <jen@haverstack.com> (https://haverstack.com/)",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/cuibonobo/cuibonobo.com/issues"
  },
  "homepage": "https://github.com/cuibonobo/cuibonobo.com#readme",
  "devDependencies": {
    "@sveltejs/adapter-static": "^1.0.0-next.21",
    "@sveltejs/kit": "^1.0.0-next.186",
    "@tailwindcss/typography": "^0.4.1",
    "@types/glob": "^7.1.4",
    "@types/jest": "^27.0.2",
    "@types/marked": "^2.0.5",
    "@types/prismjs": "^1.16.6",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.3.7",
    "commander": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "gray-matter": "^4.0.3",
    "jest": "^27.3.0",
    "marked": "^2.1.3",
    "moment": "^2.29.1",
    "ncp": "^2.0.0",
    "node-glob": "^1.2.0",
    "postcss": "^8.3.9",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "prismjs": "^1.25.0",
    "rimraf": "^3.0.2",
    "svelte": "^3.44.0",
    "svelte-check": "^2.2.7",
    "svelte-preprocess": "^4.9.8",
    "svelte-sitemap": "^1.6.0",
    "tailwindcss": "^2.2.17",
    "timekeeper": "^2.2.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "vite-tsconfig-paths": "^3.3.17",
    "xss": "^1.0.10",
    "yaml": "^1.10.2"
  },
  "type": "module",
  "dependencies": {},
  "jest": {
    "transform": {
      "^.+\\.(t|j)s?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "/dist/",
      "/build/",
      "/.svelte-kit/",
      "/data/"
    ],
    "collectCoverage": true
  }
}
