{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "target": "esnext",
    "module": "NodeNext",
    "lib": ["esnext"],
    "paths": {
      "@codec/*": ["../codec/*"]
    },
    // Must be strict so that Zod generates required fields in schemas
    "strict": true,
    "types": ["@cloudflare/workers-types"]
  }
}
